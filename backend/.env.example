# SW Portal Enhanced Backend Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=sw-portal-secret-key-2025
FLASK_ENV=development

# JWT Authentication Configuration
JWT_SECRET_KEY=jwt-secret-key-2025-change-this-in-production

# OpenAI Configuration (Optional - for AI Assistant)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ASSISTANT_ID=your_assistant_id_here

# Database Configuration (Optional - defaults to SQLite)
# DATABASE_URL=sqlite:///sw_portal.db

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=your_email@gmail.com

# SendGrid Configuration (alternative to SMTP)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Analytics Configuration
ANALYTICS_ENABLED=True
